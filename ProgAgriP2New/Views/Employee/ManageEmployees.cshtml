@model IEnumerable<ProgAgriP2New.Models.Employee>

@{
    ViewData["Title"] = "Manage Employees";
}

<div class="container">
    <h2>Employee Management</h2>

    <div class="mb-3">
        <a asp-action="AddEmployee" class="btn btn-primary">Add New Employee</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Products</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Name</td>
                            <td>@employee.Email</td>
                            <td>
                                <a asp-action="EditEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No employees registered in the system.
        </div>
    }
</div>